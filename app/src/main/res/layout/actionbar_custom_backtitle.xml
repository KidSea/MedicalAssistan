<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill_fill"
    android:background="@color/actionbar_background" >

    <ImageButton
        android:id="@+id/btn_back"
        style="@style/wrap_fill"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/socialize_titlebar_item_background_selector"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/space_8"
        android:paddingRight="@dimen/space_8"
        android:src="@drawable/actionbar_back_icon_normal" />

    <View
        android:id="@+id/line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_12"
        android:layout_marginTop="@dimen/space_12"
        android:layout_toRightOf="@id/btn_back"
        android:background="@color/white40" />

    <LinearLayout
        style="@style/fill_wrap"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/line"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_actionbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="@dimen/space_8"
            android:paddingRight="@dimen/space_8"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_ab_default_holo_dark_am"
            android:popupBackground="@color/transparent"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>