<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_mytb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme_PopupMenu">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.DrawerLayout

        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yuxuehai.medicalassistan.ui.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v4.view.ViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_layout"/>

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:elevation="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/bottom_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/iv_home0"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_home"/>

                        <ImageView
                            android:id="@+id/iv_home"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#FFFFFF"
                            android:src="@drawable/ic_home_seleced"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_home0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主页"
                            android:textColor="#32CD32"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/tv_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="主页"
                            android:textColor="#969696"
                            android:textSize="12dp"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_talk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/iv_talk0"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_message"/>

                        <ImageView
                            android:id="@+id/iv_talk"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#FFFFFF"
                            android:src="@drawable/ic_message_selected"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_talk0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对话"
                            android:textColor="#32CD32"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/tv_talk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="对话"
                            android:textColor="#969696"
                            android:textSize="12dp"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_add"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/add_selector"
                        android:padding="5dp"
                        android:src="@drawable/ic_add"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_find"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/iv_find0"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_explore"/>

                        <ImageView
                            android:id="@+id/iv_find"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#FFFFFF"
                            android:src="@drawable/ic_explore_selected"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_find0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发现"
                            android:textColor="#32CD32"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/tv_find"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发现"
                            android:textColor="#969696"
                            android:textSize="12dp"/>

                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bottom_me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:id="@+id/iv_me0"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_mine"/>

                        <ImageView
                            android:id="@+id/iv_me"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="#FFFFFF"
                            android:src="@drawable/ic_mine_selected"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_me0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我"
                            android:textColor="#32CD32"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/tv_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我"
                            android:textColor="#969696"
                            android:textSize="12dp"/>

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <fragment
            android:id="@+id/navigation_drawer"
            android:name="com.example.yuxuehai.medicalassistan.fragment.NavigationDrawerFragment"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            tools:layout="@layout/fragment_navigation_drawer"
        />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
