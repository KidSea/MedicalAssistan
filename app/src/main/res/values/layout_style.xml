<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 比较常用的宽高 -->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="list_text_title" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/main_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="list_text_info" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:drawablePadding">@dimen/space_3</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    
</resources>
